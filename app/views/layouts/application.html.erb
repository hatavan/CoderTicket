<!DOCTYPE html>
<html>
<head>
  <title>CsTemplate</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-toggleable-md navbar-dark fixed-top bg-inverse">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbars" aria-controls="navbars" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
  </button>
  <a class="navbar-brand" href="<%= root_path %>">Coder Ticket</a>
  <div class="collapse navbar-collapse" id="navbars">
    <ul class="navbar-nav mr-auto">
      <% if !logged_in? %>
          <li class="nav-item">
            <a class="nav-link" href="<%= login_path %>">Log In</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
          </li>
      <% else %>
          <li class="nav-item">
            <%= link_to "Log Out",logout_path ,class:"nav-link" ,method: :delete %>
          </li>
          <li class="nav-item">
            <%= link_to "Your Event",mines_events_path,class:"nav-link" , method: :get %>
          </li>
          <li class="nav-item" style="float: right">
            <a class="nav-link" href="<%= new_event_path %>">Create Event</a>
          </li>
      <% end %>
    </ul>
  </div>
</nav>
<div class="container">
  <%= flash_messages %>
  <%= yield %>
</div>  
</body>
</html>
