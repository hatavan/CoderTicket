
  <h2>New Venue</h2>
  <%= form_for :venue, url: venues_path do |e|  %>
    <div class="form-group">
    <%= e.label :name %>
    <%= e.text_field :name ,class:"form-control" %>
    </div>
    <div class="form-group">
    <%= e.label :full_address %>
    <%= e.text_field :full_address ,class:"form-control" %>
    </div>
    <div class="form-group">
    <%= e.label :region_id %>
    <%= e.select(:region_id,options_from_collection_for_select(@regions,"id","name"),{},{class:"form-control"}) %>
    </div>
    <div class="form-group">
    <div class="text-xs-center" style="padding-top:30px">
        <%= e.submit "Create Venue", class: "btn btn-success btn-lg" %>
    </div>
    </div>
 <% end %>

