<%= form_for @event do |e|  %>
  <div class="form-group">
    <%= e.label :name %>
    <%= e.text_field :name ,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= e.label :starts_at %>
    <%= e.date_field :starts_at ,class:"form-control"%>
  </div>
  <div class="form-group">
    <%= e.label :ends_at %>
    <%= e.date_field :ends_at, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= e.label :hero_image_url %>
    <%= e.text_field :hero_image_url,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= e.label :extended_html_description %>
    <%= e.text_field :extended_html_description,class:"form-control" %>
  </div>
  <div class="form-group">
    <%= e.label :venue_id %>
    <%= e.select(:venue_id, options_from_collection_for_select(@venues,"id","name"),{},{class:"form-control"}) %>
    <%= link_to "Create Venue", new_venue_path%>
  </div>
  <div class="form-group">
    <%= e.label :category_id %>
    <%= e.select(:category_id, options_from_collection_for_select(@categories,"id","name"),{},{class:"form-control"}) %>
  </div>
  <div class="text-xs-center" style="padding-top:30px">
    <%= e.submit @event.new_record? ? "Create Event" : "Update Event", class: "btn btn-success btn-lg" %>
  </div>
<% end %>